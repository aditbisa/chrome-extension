{
  "name": "Personal Tools",
  "description": "Personal Tools.",
  "author": "Aditya Ghaffar <adit.bisa@gmail.com>",
  "version": "1.0",
  "manifest_version": 3,
  
  "icons": {
    "16": "/images/icon-16.png",
    "32": "/images/icon-32.png",
    "48": "/images/icon-48.png"
  },
  
  "permissions": [
    "nativeMessaging",
    "tabs",
    "downloads",
    "storage",
    "contextMenus",
    "scripting",
    "activeTab",
    "declarativeNetRequest"
  ],
  "host_permissions": [ "\u003Call_urls>" ],

  "background": {
    "service_worker": "background.js"
  }
}
